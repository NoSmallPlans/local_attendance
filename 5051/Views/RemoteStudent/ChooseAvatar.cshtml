@model _5051.Models.StudentModel
@models _5051.Models.StudentViewModels

<!--need to fix the image spacing -->

@{
    ViewBag.Title = "Avatar Selection";
    <p>Name = @Model.Name</p>
}

<style>
    caption {
        text-align: center;
    }
</style>
<h2>@ViewBag.Title</h2>
<h2 style="text-align: center">Choose Your Avatar</h2>
<div class="panel panel-default">
    <div class="container">
        @foreach (var student in Models.StudentList)
        {
            if (student.IsActive == true)
            {
                <a id="@student.Username" href="~/Kiosk/Update/@student.Id">
                    <div class="kiosk-avatar col-sm-2 icons">
                        @if (@student.LoginStatus == @_5051.Models.StudentLoginStatusEnum.In)
                        {
                            <span class="checked-in">@student.Username</span>
                        }
                        else
                        {
                            <span>@student.Username</span>
                        }
                        <br />
                        <!-- Change avatar opacity based on student login status -->
                        @if (@student.LoginStatus == @_5051.Models.StudentLoginStatusEnum.In)
                        {
                            <img src="~/Content/images/@student.AvatarId" width="75" height="75" alt="No not found image! :("  />
                        }
                        else
                        {
                            <img src="~/Content/images/@student.AvatarId" width="75" height="75" alt="No not found image! :("class="checked-in" />
                        }
                    </div>
                </a>
            }
        }
    </div>
</div>

@using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.Id, new {Value = @Model.Id})
            @Html.HiddenFor(m => m.Name, new {Value = @Model.Name})
            @Html.HiddenFor(m => m.AvatarId, new {Value = "Taco"})
            @Html.HiddenFor(m => m.IsActive, new {Value = @Model.IsActive})
            @Html.HiddenFor(m => m.IsEdit, new {Value = @Model.IsEdit})
            @Html.HiddenFor(m => m.LoginStatus, new {Value = @Model.LoginStatus})
            @Html.HiddenFor(m => m.DailyStatus, new {Value = @Model.DailyStatus})
            @Html.HiddenFor(m => m.TimeIn, new {Value = @Model.TimeIn})
            @Html.HiddenFor(m => m.TimeOut, new {Value = @Model.TimeOut})
            
            <div class="row">
                <div class="col-sm-3 text-right">
                </div>
                <div class="col-sm-4">
                    @Html.ActionLink("Cancel", "Index", new { id = Model.Id }, new { @class = "btn btn-primary" })
                    <input type="submit" value="Create" class="btn btn-primary">
                </div>
            </div>
        }
